<%
  content = local_assigns[:content]
  user_provided_attributes = local_assigns.except(:content).with_defaults(
    type: "button"
  )
%>

<%= content_tag :button, TurboStreamButton::Html.deep_merge_attributes(user_provided_attributes, data: {
      controller: "turbo-stream-button",
      action: "click->turbo-stream-button#evaluate"
    }) do -%>
  <%= content %>

  <template data-turbo-stream-button-target="turboStreams"><%= yield %></template>
<%- end -%>
